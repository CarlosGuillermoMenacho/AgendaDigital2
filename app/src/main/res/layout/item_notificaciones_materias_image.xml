<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_notificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TV_NombreEmisorM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Emisor"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_marginStart="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/TV_MensajeEmisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="3dp"
            android:textSize="18sp"
            android:gravity="start"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@+id/TV_Mensaje_HoraM"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/TV_NombreEmisorM"/>

        <ImageView
            android:id="@+id/img_NotificacionM"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/black_800"
            app:layout_constraintBottom_toTopOf="@+id/TV_Mensaje_HoraM"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TV_NombreEmisorM" />

        <TextView
            android:id="@+id/TV_Mensaje_HoraM"
            android:layout_width="77dp"
            android:layout_height="28dp"
            android:gravity="end"
            android:text="20:30"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TV_Mensaje_HoraM" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>