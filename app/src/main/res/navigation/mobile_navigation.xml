<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_gallery">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.agendadigital.Fragments.FragmentAfiliacion"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_afiliacion" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.agendadigital.Fragments.FragmentListaAlumnos"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_lista_alumnos" >
        <action
            android:id="@+id/action_nav_gallery_to_boletinFragment"
            app:destination="@id/boletinFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.agendadigital.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow"/>
    <fragment
        android:id="@+id/boletinFragment"
        android:name="com.agendadigital.Fragments.BoletinFragment"
        android:label="fragment_boletin"
        tools:layout="@layout/fragment_boletin" >
        <action
            android:id="@+id/action_boletinFragment_to_nav_gallery"
            app:destination="@id/nav_gallery"/>
    </fragment>
</navigation>